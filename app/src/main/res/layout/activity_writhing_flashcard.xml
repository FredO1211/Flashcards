<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WrithingFlashcardActivity">

    <TextView
        android:id="@+id/askingTextView"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.335" />

    <TextView
        android:id="@+id/correctAnswer"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="284dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/buttonshape"
        android:text="Check"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <ImageView
        android:id="@+id/askingLanguageFlag"
        android:layout_width="35dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/logoCardView"
        app:layout_constraintBottom_toBottomOf="@+id/askingTextView"
        app:layout_constraintEnd_toStartOf="@+id/askingTextView"
        app:layout_constraintTop_toTopOf="@+id/askingTextView"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/polish_flag" />

    <ImageView
        android:id="@+id/answerLanguageFlag"
        android:layout_width="35dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/logoCardView"
        app:layout_constraintBottom_toBottomOf="@+id/answerEditText"
        app:layout_constraintEnd_toStartOf="@+id/answerEditText"
        app:layout_constraintTop_toTopOf="@+id/answerEditText"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/polish_flag" />
</android.support.constraint.ConstraintLayout>