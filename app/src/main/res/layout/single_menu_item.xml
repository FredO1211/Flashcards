<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/playImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collectionNameTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/collectionNameTextView"
        app:srcCompat="@drawable/ic_play_arrow_green_60dp" />

    <ImageView
        android:id="@+id/deleteImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collectionNameTextView"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/playImageView"
        app:srcCompat="@drawable/ic_delete_grey_40dp" />

    <ImageView
        android:id="@+id/editImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collectionNameTextView"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/deleteImageView"
        app:srcCompat="@drawable/ic_edit_grey_40dp" />

    <TextView
        android:id="@+id/numberOfElementsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collectionNameTextView"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/logoCardView"
        android:text="100 elements"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/collectionNameTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/logoCardView"
        android:text="collectionName"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/logoCardView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_star_black_24dp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
</android.support.v7.widget.CardView>